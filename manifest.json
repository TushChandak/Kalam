{
    "name": "Kalam",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": [ "activeTab", "declarativeContent", "storage", "identity" ],
    //"options_page": "options.html",
    //"background": {
    //    "scripts": [ "Kalam/jquery-3.3.1.min.js", "Kalam/bootstrap.min.js", "Kalam/jquery.mark.min.js", "Kalam/UseMark.js", "Kalam/jquery.ui.position.js", "Kalam/jquery.contextMenu.js", "background.js" ],
    //    "persistent": false
