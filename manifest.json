            "js": [ "Kalam/jquery-3.3.1.js", "Kalam/jquery-3.3.1.min.js", "Kalam/bootstrap.min.js", "Kalam/jquery.mark.min.js", "Kalam/jquery.ui.position.js", "Kalam/jquery.contextMenu.js", "Kalam/Email.js", "Kalam/UseMark.js" ]
